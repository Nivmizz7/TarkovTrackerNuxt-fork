#     cd "$WORKTREE_PATH"
#     python -m venv .venv
#     # Unix activation (this script is bash-only):
#     source .venv/bin/activate
#     # Windows (PowerShell/CMD, for manual use): .venv\Scripts\activate
#     python -m pip install --upgrade pip
#     python -m pip install -r requirements.txt
